# Environment variables for ChittyOS Trust Engine deployment

# Production mode
PRODUCTION=true

# Server configuration
PORT=8000
HOST=0.0.0.0

# Database (PostgreSQL for production)
DATABASE_URL=postgresql://username:password@localhost:5432/chitty_trust

# CORS domains
ALLOWED_ORIGINS=https://chitty.cc,https://*.chitty.cc,https://trust.chitty.cc,https://id.chitty.cc

# SSL/TLS (optional)
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=INFO